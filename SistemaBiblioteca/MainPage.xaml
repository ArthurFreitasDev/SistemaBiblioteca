<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaBiblioteca.MainPage"
             Loaded="ContentPage_Loaded"
             Title="">

    <ContentPage.Resources>
        <Style TargetType="ImageButton">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="WidthRequest" Value="300"/>
        </Style>
    </ContentPage.Resources>
    <StackLayout>
        <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*">
            <ImageButton Grid.Column="1" Grid.Row="0" Clicked="CadastroPessoa" Source="Resources/Images/Livro.png"/>
            <ImageButton Grid.Column="2" Grid.Row="0" Clicked="CadastroAutor" Source="Resources/Images/Livro.png"/>
            <ImageButton Grid.Column="3" Grid.Row="0" Clicked="CadastroEditora" Source="Resources/Images/Livro.png"/>
            <ImageButton Grid.Column="1" Grid.Row="1" Clicked="CadastroLivro" Source="Resources/Images/Livro.png"/>
            <ImageButton Grid.Column="2" Grid.Row="1" Clicked="CadastroFuncionario" Source="Resources/Images/Livro.png"/>
            <ImageButton Grid.Column="3" Grid.Row="1" Clicked="CadastroCategoria" Source="Resources/Images/Livro.png"/>
        </Grid>
    </StackLayout>

</ContentPage>
