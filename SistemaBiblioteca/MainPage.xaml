<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaBiblioteca.MainPage"
             Loaded="ContentPage_Loaded">

    <StackLayout>
        <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*,*,*">
            <ImageButton Grid.Column="1" Grid.Row="1" Clicked="CadastroPessoa"/>
            <ImageButton Grid.Column="2" Grid.Row="1" Clicked="CadastroAutor"/>
            <ImageButton Grid.Column="3" Grid.Row="1" Clicked="CadastroEditora"/>
            <ImageButton Grid.Column="1" Grid.Row="2" Clicked="CadastroLivro" Source="Resources/Images/Livro.png"/>
            <ImageButton Grid.Column="2" Grid.Row="2" Clicked="CadastroFuncionario"/>
            <ImageButton Grid.Column="3" Grid.Row="2" Clicked="CadastroCategoria"/>
        </Grid>
    </StackLayout>

</ContentPage>
