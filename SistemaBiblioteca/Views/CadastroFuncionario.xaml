<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaBiblioteca.Views.CadastroFuncionario"
             Title=""
             BackgroundColor="DarkCyan">

    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="30,15,0,0">
            <Grid RowDefinitions="*,*,*,*,*" ColumnDefinitions="*,*,*">
                <Label Text="Cadastro de Funcionario" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" HorizontalOptions="Center" FontSize="30"/>
                <Entry Placeholder="Nome" x:Name="Nome" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
                <Entry Placeholder="Senha" x:Name="Senha" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
                <Entry Placeholder="Confirmar senha" x:Name="ConfirmarSenha" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Text="Confirmar" Clicked="AdicionarFuncionario" Grid.Column="1" Grid.Row="4" Margin="0,20,0,0"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>