<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaBiblioteca.Views.CadastroLivro"
             Title=""
             BackgroundColor="#7B68EE"
             Loaded="ContentPage_Loaded">
    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="30,15,0,0">
            <Grid RowDefinitions="*,*,*,*,*,*,*" ColumnDefinitions="*,*,*,*">
                <Label Text="Cadastro de Pessoa" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Center" FontSize="30"/>
                <Entry Placeholder="Titulo" x:Name="txtTitulo" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>
                <Entry Placeholder="Sinopse" x:Name="txtRMRG" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
                <Picker x:Name="pckAutor" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" BackgroundColor="White" Margin="0,0,0,10"/>
                <Picker x:Name="pckEditora" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" BackgroundColor="White" Margin="0,0,0,10"/>
                <Picker x:Name="pckCategorias" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2" BackgroundColor="White" Margin="0,0,0,10"/>
                <Button Text="Confirmar" Grid.Column="1" Grid.Row="6" Margin="0,20,0,0" Grid.ColumnSpan="2" HorizontalOptions="Center" BackgroundColor="#8A2BE2"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>